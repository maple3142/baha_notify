{
  "manifest_version": 2,

  "name": "bahamut notification",
  "description": "bahamut notification",
  "version": "1.0",
  "icons":{
    "128":"icon.png",
    "48":"icon.png",
    "16":"icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "https://www.gamer.com.tw/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}